/*
 * Configuration file for Agronomia ESP32 Firmware
 * 
 * Copy this file to config.h and update with your settings
 */

#ifndef CONFIG_H
#define CONFIG_H

// Device Configuration
#define DEVICE_ID "ESP32-001"  // Unique identifier for this device

// WiFi Configuration
#define WIFI_SSID "YOUR_WIFI_SSID"
#define WIFI_PASSWORD "YOUR_WIFI_PASSWORD"

// MQTT Configuration
#define MQTT_SERVER "mqtt.agronomia.local"  // MQTT broker address
#define MQTT_PORT 1883
#define MQTT_USER "agronomia"
#define MQTT_PASSWORD "your_secure_password"
#define MQTT_TOPIC_BASE "agronomia/devices"

// Optional: Static IP configuration (comment out for DHCP)
// #define USE_STATIC_IP
#ifdef USE_STATIC_IP
  #define STATIC_IP IPAddress(192, 168, 1, 100)
  #define GATEWAY IPAddress(192, 168, 1, 1)
  #define SUBNET IPAddress(255, 255, 255, 0)
  #define DNS IPAddress(8, 8, 8, 8)
#endif

// Sensor Configuration
#define PH_CALIBRATION_ENABLED true
#define EC_CALIBRATION_ENABLED true
#define TEMPERATURE_UNIT_CELSIUS true  // false for Fahrenheit

// Timing Configuration (milliseconds)
#define SENSOR_READ_INTERVAL 5000    // Read sensors every 5 seconds
#define PUBLISH_INTERVAL 10000       // Publish to MQTT every 10 seconds
#define WIFI_RETRY_INTERVAL 5000     // Retry WiFi connection every 5 seconds
#define MQTT_RETRY_INTERVAL 5000     // Retry MQTT connection every 5 seconds

// Alert Thresholds (set to 0 to disable local alerts)
#define PH_MIN_THRESHOLD 5.5
#define PH_MAX_THRESHOLD 6.5
#define TEMP_MIN_THRESHOLD 18.0
#define TEMP_MAX_THRESHOLD 26.0
#define HUMIDITY_MIN_THRESHOLD 60.0
#define HUMIDITY_MAX_THRESHOLD 70.0

// Debug Configuration
#define DEBUG_MODE true  // Enable serial debug output
#define SERIAL_BAUD 115200

#endif // CONFIG_H
