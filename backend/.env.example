# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos - Opción 1: Firestore
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_PRIVATE_KEY=your-private-key

# Base de datos - Opción 2: Supabase (alternativa)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key

# Configuración de alertas
ALERT_PH_MIN=5.5
ALERT_PH_MAX=6.5
ALERT_EC_MIN=800
ALERT_EC_MAX=1500
ALERT_WATER_TEMP_MIN=18
ALERT_WATER_TEMP_MAX=24
ALERT_AIR_TEMP_MIN=18
ALERT_AIR_TEMP_MAX=28
ALERT_HUMIDITY_MIN=50
ALERT_HUMIDITY_MAX=70

# Configuración de dispositivos autorizados
ALLOWED_DEVICES=ESP32-001,ESP32-002

# CORS - Dominios permitidos
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
